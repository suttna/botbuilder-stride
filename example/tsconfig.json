{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["dom", "es7"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./lib"
  },
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
